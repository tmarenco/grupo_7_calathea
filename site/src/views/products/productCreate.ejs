<!DOCTYPE html>
<html lang="en">
    <!-- PARTIAL DEL HEAD-->

    <%- include("../partials/head.ejs")%>

<body>

           <!-- PARTIAL DEL HEADER-->
<%-include ("../partials/header.ejs") %>
   
<main class="main-contactos">

    <section class="section-derecha-contacto">
        <form class="formulario-contacto" action="">

            <div class="div-formulario-contacto">
                <label for="code"><strong>CODIGO</strong></label>
                <input type="text" name="code" id="code" placeholder ="CODIGO MP1234" class="formulario-input-contacto">
            </div>
          <div class="div-formulario-contacto">
              <label for="name"><strong>NOMBRE</strong></label>
              <input type="text" name="name" id="name" placeholder ="NOMBRE DEL PRODUCTO" class="formulario-input-contacto">
          </div>
          <div class="div-formulario-contacto">
              <label for="description"><strong>DESCRIPCION</strong></label>
              <input type="text" name="description" id="description" placeholder ="DESCRIPCION" class="formulario-input-contacto">
          </div>
          <div class="div-formulario-contacto">
              <label for="image"><strong>IMAGEN DEL PRODUCTO</strong></label>
              <input type="file" name="image" id="image" placeholder ="IMAGEN DEL PRODUCTO" class="formulario-input-contacto">
          </div>
        
          <div class="div-formulario-contacto">
            <label for="category"><strong>CATEGORIAS</strong></label>
                <select class="formulario-input-contacto" name="category" id="category">
                    <option value="1">PLANTA INTERIOR</option>
                    <option value="2">PLANTA EXTERIOR</option>
                    <option value="3">MACETAS</option>
                    <option value="4">ACCESORIOS</option>
                    <option value="5">FERTILIZANTES</option>
                </select>
          </div>
          <div class="div-formulario-contacto">
            <label for="price"><strong>PRECIO</strong></label>
            <input type="text" name="price" id="price" placeholder ="$123.345" class="formulario-input-contacto">
        </div>

            <form action="/listProducts" method="POST"></form>
          <button type="submit" class="formulario-boton-fr">Crear producto</button>

  </section>
</main>  
</body>
</html>