<!-- esta pagina es ususarios/DETALLE DE USUARIO -->
<!DOCTYPE html>
<html lang="en">
    <!-- PARTIAL DEL HEAD-->
    <%- include("../partials/head.ejs")%>
    
    <body>
    <!-- PARTIAL DEL HEADER-->
    <%-include ("../partials/header.ejs") %>

    <!-- INICIO MAIN  -->
    <div class="contenedor-general">
    <!--MUENU HORIZONTAL-->

    <div class="menu-horizontal"><a href="/" > Inicio /</a> <a href="/">Mi Cuenta /</a> <a href="/usuario/perfil"><strong>Perfil</strong></a></div>

    
    <!--INICIO DE FORMULARIO-->

    <main class= "Main-fr">
        <section class= "section-perfil">

            <form action ="/usuario/registrarse" method ="POST" class="form-fr">

                <p class= "formulario-titulo-fr"><strong>TU PERFIL</strong></p>

                <section class="section-izquierdo-contacto">
                <div class="perfil-div-img">               
                    <label for="img" class="perfil-img"><strong>AVATAR</strong></label>
                    <br>
                    <img src="/images/user-images/<%=usuario.image %>" alt="avatar" class="perfil-img">
                </div>   
                </section>


                <section class="section-izquierdo-contacto">
                    <div class="fomulario-div-fr">
                            <label for="name"><strong>NOMBRE</strong></label>
                        <div class="formulario-input-fr"><%=usuario.first_name %></div>
                    </div> 

                    <div class="fomulario-div-fr">
                        <label for="name"><strong>APELLIDO</strong></label>
                    <div class="formulario-input-fr"><%=usuario.last_name %></div>
                </div> 

            <div class="fomulario-div-fr">  
                <label for="email"><strong>EMAIL</strong></label>
                <div class="formulario-input-fr"><%=usuario.email %></div>
            </div> 

            <div class="fomulario-div-fr">               
                <label for="tel"><strong>TELÉFONO</strong></label>
                <div class="formulario-input-fr"><%=usuario.phone %></div>
            </div> 

            <br><br>

        </section>    
        
            </form>            
            <form action="/usuario/<%= usuario.id %>/editar">
                <button class="boton-editar">Editar usuario</button>
            </form>
            <form action="/usuario/<%= usuario.id %>/editarContrasenia">
                <button class="boton-editar">Cambiar contraseña</button>
            </form>
            <% if (locals.userLogged.id_category == 1){%>
                <form action="/usuario/administracion">
                    <button class="boton-editar">Administración</button>
                </form>
            <% } %> 
        
            
        </section>
    
    </main>
    </div>
    <%-include ("../partials/footer.ejs") %>
    </body>
</html>